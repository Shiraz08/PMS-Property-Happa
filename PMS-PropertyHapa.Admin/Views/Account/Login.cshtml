@model PMS_PropertyHapa.Models.DTO.LoginRequestDTO
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
}
<form class="theme-form login-form needs-validation" novalidate="" method="post">
    <h4>Login</h4>
    <h6>Welcome back! Log in to your account.</h6>
    <div class="form-group">
        <label>Email Address</label>
        <div class="input-group">
            <span class="input-group-text"><i class="icon-email"></i></span>
            <input id="Email" type="email" class="form-control" placeholder="Email..." required="" />
        </div>
    </div>
    <div class="form-group">
        <label>Password</label>
        <div class="input-group">
            <span class="input-group-text"><i class="icon-lock"></i></span>
            <input id="Password" type="password" class="form-control" placeholder="Password..." required="" />
            <div class="show-hide"><span class="show"></span></div>
        </div>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <input id="checkbox1" type="checkbox">
            <label class="text-muted" for="checkbox1">Remember password</label>
        </div><a class="link" href="/auth/ForgotPassword">Forgot password?</a>
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-block" type="submit">Sign in</button>
    </div>
    <p>Don't have an account?<a class="ms-2" href="sign-up.html">Create Account</a></p>
</form>