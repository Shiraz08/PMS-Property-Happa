
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-12">
                    <h3>Payments</h3>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a class="home-item" href="index.html"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Payment</li>
                        <li class="breadcrumb-item active">List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid my-4">
        <div class="row">
            <div class="col-xl-12 col-md-12 box-col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="right-side-header">

                        </div>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover text-center display" id="paymentTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col" class="tableHeaderbg">Subscription Id</th>
                                        <th scope="col" class="tableHeaderbg">Card Holder Name</th>
                                        <th scope="col" class="tableHeaderbg">Price</th>
                                        <th scope="col" class="tableHeaderbg">Start Date</th>
                                        <th scope="col" class="tableHeaderbg">End Date</th>
                                        <th scope="col" class="tableHeaderbg">Subscription Interval</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#paymentTable').DataTable({
            "ajax": {
                "url": "/Payments/GetPaymentsData",
                "type": "GET",
                "dataSrc": ""
            },

            "columns": [
                {
                    "data": "SubscriptionId",
                    "className": "tableFontSize align-middle";
                    
                },
                {
                    "data": "CardHolderName",
                    "className": "tableFontSize align-middle";
                    
                },
                {
                    "data": "Price",
                    "className": "tableFontSize align-middle";

                },
                {
                    "data": "StartDate",
                    "className": "tableFontSize align-middle";

                },
                {
                    "data": "EndDate",
                    "className": "tableFontSize align-middle";

                },
                {
                    "data": "BillingInterval",
                    "className": "tableFontSize align-middle";

                },
            ]
        });
</script>

