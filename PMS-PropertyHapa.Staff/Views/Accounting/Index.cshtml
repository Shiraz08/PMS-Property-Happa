@using PMS_PropertyHapa.Staff.Services
@using PMS_PropertyHapa.Staff.Services.IServices
@using System.Security.Claims
@using static PMS_PropertyHapa.Shared.Enum.SD
@{
    ViewData["Title"] = "Accounting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject IPermissionService _permissionService;
@{
    var userId = Context.Request.Cookies["userId"];
    bool viewRentPermission = await _permissionService.HasAccess(userId, (int)UserPermissions.ViewRent);
    bool viewAssestExpensePermission = await _permissionService.HasAccess(userId, (int)UserPermissions.ViewAssestExpense);
    bool viewDepositPermission = await _permissionService.HasAccess(userId, (int)UserPermissions.ViewDeposit);
    bool viewBillingPermission = await _permissionService.HasAccess(userId, (int)UserPermissions.ViewBilling);
    bool viewInvoicesPermission = await _permissionService.HasAccess(userId, (int)UserPermissions.ViewInvoices);
    bool viewAccountTypePermission = await _permissionService.HasAccess(userId, (int)UserPermissions.ViewAccountType);
    bool viewAccountSubTypePermission = await _permissionService.HasAccess(userId, (int)UserPermissions.ViewAccountSubType);
    bool viewChartofAccountsPermission = await _permissionService.HasAccess(userId, (int)UserPermissions.ViewChartofAccounts);
    bool viewBudgetPermission = await _permissionService.HasAccess(userId, (int)UserPermissions.ViewBudget);
}
<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-sm-6">
                    <h3>Accounting</h3>
                </div>
                <div class="col-12 col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Accounting</li>
                        <li class="breadcrumb-item active">List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <!-- Row for three cards -->
        <div class="row">
            <!-- Card for Account Type -->
            @if (viewAccountTypePermission)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <i class="icon-folder fa-3x"></i> <!-- Updated icon class -->
                        </div>
                    
                            <div class="card-footer">
                                <h4 class="card-title text-center">
                                    <a href="@Url.Action("Index", "AccountType")">Account Type</a>
                                </h4>
                            </div>
                    </div>
                </div>
            }
            <!-- Card for Account Sub Type -->
            @if (viewAccountSubTypePermission)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <i class="icon-folder fa-3x"></i> <!-- Updated icon class -->
                        </div>
                        <div class="card-footer">
                            <h4 class="card-title text-center">
                                <a href="@Url.Action("Index", "AccountSubType")">Account Sub Type</a>
                            </h4>
                        </div>
                    </div>
                </div>
            }
            <!-- Card for Chart of Accounts -->
            @if (viewChartofAccountsPermission)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <i class="icon-bar-chart fa-3x"></i> <!-- Updated icon class -->
                        </div>
                        <div class="card-footer">
                            <h4 class="card-title text-center">
                                <a href="@Url.Action("Index", "ChartAccounts")">Chart of Accounts</a>
                            </h4>
                        </div>
                    </div>
                </div>
            }
            
        <!-- Repeat the row structure for the next set of three cards -->
        
            <!-- Card for View Rent -->
            @if (viewRentPermission)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <i class="icon-eye fa-3x"></i> <!-- Updated icon class -->
                        </div>
                        <div class="card-footer">
                            <h4 class="card-title text-center">
                                <a href="@Url.Action("Rent", "Accounting")">View Rent</a>
                            </h4>
                        </div>
                    </div>
                </div>
            }
            <!-- Card for View Assest Expense -->
            @if (viewAssestExpensePermission)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <i class="icon-wallet fa-3x"></i> <!-- Updated icon class -->
                        </div>
                        <div class="card-footer">
                            <h4 class="card-title text-center">
                                <a href="@Url.Action("AssestExpense", "Accounting")">View Assest Expense</a>
                            </h4>
                        </div>
                    </div>
                </div>
            }
            <!-- Card for View Deposit -->
            @if (viewDepositPermission)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <i class="icon-bag fa-3x"></i> <!-- Updated icon class -->
                        </div>
                        <div class="card-footer">
                            <h4 class="card-title text-center">
                                <a href="@Url.Action("Deposit", "Accounting")">View Deposit</a>
                            </h4>
                        </div>
                    </div>
                </div>
            }
        <!-- Continue for remaining cards -->
        
            <!-- Card for View Billing -->
            @if (viewBillingPermission)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <i class="icon-clipboard fa-3x"></i> <!-- Updated icon class -->
                        </div>
                        <div class="card-footer">
                            <h4 class="card-title text-center">
                                <a href="@Url.Action("Billing", "Accounting")">View Billing</a>
                            </h4>
                        </div>
                    </div>
                </div>
            }
            <!-- Card for View Invoices -->
            @if (viewInvoicesPermission)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <i class="icon-clipboard fa-3x"></i> <!-- Updated icon class -->
                        </div>
                        <div class="card-footer">
                            <h4 class="card-title text-center">
                                <a href="@Url.Action("Invoices", "Accounting")">View Invoices</a>
                            </h4>
                        </div>
                    </div>
                </div>
            }
            
            <!-- Card for Budgeting -->
            @if (viewBudgetPermission)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <i class="icon-money fa-3x"></i> <!-- Updated icon class -->
                        </div>
                        <div class="card-footer">
                            <h4 class="card-title text-center">
                                <a href="@Url.Action("Index", "Budget")">Budgeting</a>
                            </h4>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
