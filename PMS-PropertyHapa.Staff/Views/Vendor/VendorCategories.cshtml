@using PMS_PropertyHapa.Staff.Services
@using PMS_PropertyHapa.Staff.Services.IServices
@using System.Security.Claims
@using static PMS_PropertyHapa.Shared.Enum.SD
@{
    ViewData["Title"] = "VendorCategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject IPermissionService _permissionService;
@{
    var userId = Context.Request.Cookies["userId"];
    bool addVendorCategoriesPermission = await _permissionService.HasAccess(userId, (int)UserPermissions.AddVendorCategories);
}
<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-sm-6">
                    <h3>Vendor Categories</h3>
                </div>
                <div class="col-12 col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="Index"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Vendor Categories</li>
                        <li class="breadcrumb-item active">List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        @if (addVendorCategoriesPermission)
                        {
                            <div class="right-side-header">
                                <button class="btn btn-success" id="newVendorCategoryBtn">New Vendor Categories</button>
                            </div>
                        }
                        
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table display" id="vendorCategoryTable">
                                <thead>
                                    <tr>
                                        <th scope="col" class="text-center tableHeaderbg">Name</th>
                                        <th scope="col" class="text-center tableHeaderbg">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="newVendorCategoryModal" tabindex="-1" aria-labelledby="vendorCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="VendorCategoryModalLabel">New Vendor Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="vendorCategoryForm">
                <input type="hidden" value="" id="vendorCategoryId" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="vendorCategoryName" class="form-label">Name *</label>
                        <input type="text" class="form-control" name="vendorCategoryName" id="vendorCategoryName" placeholder="Vendor category..." required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success" id="saveBtn">Save</button>
                    </div>
                 </div>
            </form>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        $('#vendorCategoryTable').DataTable({
            "ajax": {
                "url": "/Vendor/GetVendorCategories", 
                "type": "GET",
                "dataSrc": ""
            },

            "columns": [
                { 
                  "data": "Name", 
                  "className": "text-center" 
                },{
                    "className": "text-center",
                    "data": "VendorCategoryId",
                    "render": function (data, type, row, meta) {
                        return `
                                <div class="dropdown-basic">
                                    <div class="dropdown">
                                    @if(addVendorCategoriesPermission){
                                                <div class="btn-group mb-0">
                                                        <button class="dropbtn btn btn-success" type="button">Action <span><i class="icofont icofont-arrow-down"></i></span></button>
                                                    <div class="dropdown-content">
                                                        <a class="btn btn-secondary" onclick="editVendorCategory(${data})">
                                                            <i class="fa fa-edit"></i> Edit
                                                        </a>
                                                        <a class="btn btn-secondary" onclick="deleteVendorCategory(${data})">
                                                            <i class="fa fa-trash"></i> Delete
                                                        </a>
                                                    </div>
                                                </div>
                                    }
                                        
                                    </div>
                                </div>
                            `;
                    }
                }
            ]
        });



        $("#newVendorCategoryBtn").on("click", function () {
            resetModal();
            $("#vendorCategoryModalLabel").html("New Vendor Category");
            $("#newVendorCategoryModal").modal('show');
        });

        $('#vendorCategoryForm').on('submit', function (event) {
            event.preventDefault();

            var formData = {
                VendorCategoryId: Number($('#vendorCategoryId').val()),
                Name: $('#vendorCategoryName').val(),
            };

            $.ajax({
                url: '@Url.Action("SaveVendorCategory", "Vendor")',
                type: 'POST',
                data: JSON.stringify(formData),
                contentType: 'application/json',
                beforeSend: function () {
                    $('#saveBtn').prop('disabled', true).text('Saving...');
                },
                success: function (response) {
                    $("#newVendorCategoryModal").modal('hide');
                    location.reload();
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                    alert('Failed to save data');
                },
                complete: function () {
                    $('#saveBtn').prop('disabled', false).text('Save');
                }
            });
        });
    });

    function resetModal() {
        $("#newVendorCategoryModal form")[0].reset();
    }

    function deleteVendorCategory(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: 'You will not be able to recover this Vendor Category!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("DeleteVendorCategory", "Vendor")',
                    type: 'POST',
                    data: { id: id },
                    success: function (res) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Vendor Category deleted successfully',
                            showConfirmButton: false,
                            timer: 1500
                        });
                        location.reload()
                    },
                    error: function (xhr, status, error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Something went wrong!'
                        });
                    },
                });
            }
        });
    }

    function editVendorCategory(id) {
        $.ajax({
            url: '@Url.Action("GetVendorCategoryById", "Vendor")',
            type: 'POST',
            data: { id: id },
            success: function (res) {
                $("#vendorCategoryModalLabel").html("Edit Vendor Category");
                $("#vendorCategoryId").val(res.VendorCategoryId);
                $("#vendorCategoryName").val(res.Name);
                $("#newVendorCategoryModal").modal('show');
            },
            error: function (xhr, status, error) {
                console.error('Error:', error);
                alert('Failed to retrieve data');
            },
        });
    }
</script>