    <link rel="icon" href="~/Dashboard/assets/images/logo/favicon-icon.png" type="image/x-icon">
    <link rel="shortcut icon" href="~/Dashboard/assets/images/logo/favicon-icon.png" type="image/x-icon">
    <title>Property Happa</title>
    <!-- Google font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
