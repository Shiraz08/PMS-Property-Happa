@using Microsoft.AspNetCore.Hosting
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment env


@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string username = ViewData["Username"] as string;
}

<div class="text-center">
    <h2>Welcome, @username! to Property Happa</h2>
    <p>
        @if ((env.EnvironmentName == "Development"))
        {
            <a href="https://localhost:7247/" class="btn btn-primary">Click here to login to your PMC Portal</a>
        }
        else
        {
            <a href="https://pmc.propertyhapa.com/" class="btn btn-primary">Click here to login to your PMC Portal</a>
        }
    </p>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#pmcPortalDiv').removeClass('d-none');
    });
</script>